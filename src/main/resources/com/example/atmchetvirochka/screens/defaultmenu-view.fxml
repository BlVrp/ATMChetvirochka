<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.atmchetvirochka.controller.DefaultMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="cardNumber" promptText="Enter card number">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </TextField>

    <Label fx:id="putCardLabel" onMouseClicked="#goToLoginMenu" text="Put card." textFill="#000000d4">
      <font>
         <Font name="System Italic" size="32.0" />
      </font></Label>
</VBox>
